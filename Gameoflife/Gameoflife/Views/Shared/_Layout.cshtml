<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Game of Life</title>
        @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")<!--I don't think we need this one here -->
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>


    

    <script>
$(document).ready(function(){
$("#newTemplate").hide();
$("#templated").hide();
$("#hiddenSubmitButton").hide();
$("#cellBuilderHelper").hide();
$("#seed_Cells").hide();

    $("#create td").click(function(){
        $(this).hide();
    });

	  $("#blankTemplate").click(function(){
        $("#blankTemplate").hide();
        $("#newTemplate").show();
        $("#myTable").show();
        $("#seed_Cells").show();
       $("#cellBuilderHelper").show();
    });
	 $("#newTemplate").click(function(){
	     $("#newTemplate").hide();
	     $("#hiddenSubmitButton").slideToggle("slow");
			
    });

	


});
    </script>
   

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GameOfLife", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("All Templates", "All", "UserTemplates")</li>
                    <li>@Html.ActionLink("My Active Games", "MyActiveGames", "UserGames")</li>
                    
                </ul>
                <ul class="nav navbar-nav right">
                   

                    @if (Session["User"] == null)
                    {
                        <li>@Html.ActionLink("Register", "Register", "Users")</li>
                        <li>@Html.ActionLink("Login", "Login", "Users")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("My Templates", "Index", "UserTemplates")</li>
                        <li>@Html.ActionLink("My Saved Games", "MySavedGames", "UserGames")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Users")</li>

                    }
                </ul>
</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year RMIT - @ViewBag.Title</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
