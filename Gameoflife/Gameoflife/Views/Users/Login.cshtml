@using System.Web.Mvc.Html
@model Gameoflife.Models.User
@{
    ViewBag.Title = "Log in";
}

<h2>Login</h2>

            @using (Html.BeginForm())
            {
    
        <table>
            <tr>
                <td class="gameLabel">UserName:</td>
                <td>@Html.EditorFor(model => model.Email)</td>

            </tr>
            <br/>
            <tr>
                <br />
                <td class="gameLabel">Password: </td>
                <td>@Html.PasswordFor(model => model.Password)</td>
            </tr>
            <tr><td></td>

                <td>
                    <br />
                    <input class="btn-primary gamebtn" type="submit" value="Login"/>
                    <span class ="text-danger">@ViewBag.LoginErrorMessage</span>
                </td>
            
            </tr>


        </table>
            }

