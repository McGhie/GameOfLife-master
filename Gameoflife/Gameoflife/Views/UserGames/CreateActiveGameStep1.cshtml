@model UserGame

@using Gameoflife.Models
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Create Active Game";

}

<div class="theGame">

    <h2 class="Activebuilder">
        Create Active Game - Step 1 of 2</h2>
    <br /><br /><hr/>
        @using (Html.BeginForm("CreateActiveGameStep2", "UserGames", FormMethod.Get))
        {

            <p>
                <div class="form-group">
                    <h4>
                        <label class="control-label col-md-2" for="userTemplateID">Templates</label>
                        <div class="col-md-10">
                            @Html.DropDownList("userTemplateID", "Select a Value")

                        </div>
                    </h4>
                    <br /><br /><br /><br />
                    <input   type="submit" value="Next Step" class="btn btn-default gamebtn col-md-offset-8" />

                </div>
            </p>
        }
</div>
